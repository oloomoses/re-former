<% if @user.errors.any? %>
  <h3>Correct the following errors!</h3>  
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>  
<% end %>
 
<%= form_for @user do |f| %>
  <%= f.label :username, 'Enter your username here : ' %>
  <%= f.text_field :username, placeholder: 'Enter Username' %><br>

  <%= f.label :email, 'Email : ' %>
  <%= f.email_field :email, placeholder: 'email@example.com' %><br>

  <%= f.label :password, 'Password : ' %>
  <%= f.password_field :password, placeholder: 'Password' %><br>

  <%= f.submit :submit %>

<% end %>
